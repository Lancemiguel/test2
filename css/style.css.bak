body {
    background-image: url("images/background.jpg");
	background-repeat: no-repeat;
    background-size: cover;
    position: relative;
}
#header {margin: auto; width: 960px;}
#header #header-title { float: left; margin-top: 90px; }
#header #header-title a { text-decoration: none; font-size: 40px; color: #555555; }
#header #fb-icon { float: right; margin-top: 69px; margin-right: 10px; }
#header #fb-icon img { max-width: 50%; }
#header #tweet-icon { float: right; margin-top: 69px; margin-right: -110px; }
#header #tweet-icon img { max-width: 50%; }
#header #search-icon { float: right; margin-top: 115px; margin-right: -160px; }
#header #search-icon img { max-width: 65%; }


#nav { float: left; border-top-style: double; border-left-style: none; border-bottom-style: solid; border-width: 2px; padding: 15px 250px 15px 15px; margin-top: 50px; margin-left: 150px; width: 700px; }
#nav ul li { float: left;}
#nav ul li a { text-decoration: none; color: #555555; margin-right: 30px; }


#quotes { float: left; margin-left: 220px; margin-top: 40px; color: #555555; }
#quotes h2 { font-size: 40px; }
#quotes h4 { font-size: 26px; font-style: italic; text-align: center; padding: 5px;}

